public class EmployeeListSort {
	public static void main(String[] args) {
		List<Employee> empList = new ArrayList<>();
		empList.add(new Employee(102, "Sagarika", 300.50));
		empList.add(new Employee(103, "Lucky", 100.30));
		empList.add(new Employee(101, "Mama", 200.70));
		System.out.println(empList);
		
		Collections.sort(empList, new Comparator<Employee>() {

			@Override
			public int compare(Employee o1, Employee o2) {
				return Integer.compare(o1.getEmpName().length(), o1.getEmpName().length());
			}
		});
		System.out.println(empList);
	}
}