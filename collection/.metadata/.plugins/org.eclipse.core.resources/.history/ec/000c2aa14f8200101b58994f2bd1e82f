package com.sn;

import java.util.ArrayList;
import java.util.List;
import java.util.ListIterator;

import com.sn.entity.Employee;

public class EmployeeUtil {
	public static void printEmpDetails(Employee e) {
		System.out.println(e.getEmpId());
		System.out.println(e.getEmpName());
		System.out.println(e.getSalary());
	}
	
	public List<Employee> updateSalary(List<Employee> empList, Integer addExtraAmount) {
		ListIterator<Employee> listItr = empList.listIterator();
		while(listItr.hasNext()) {
			Employee employee = listItr.next();
			EmployeeUtil.printEmpDetails(employee);
			System.out.println(employee.getEmpId());
			System.out.println(employee.getEmpName());
			System.out.println(employee.getSalary());
		}
		return null;
	}
}
