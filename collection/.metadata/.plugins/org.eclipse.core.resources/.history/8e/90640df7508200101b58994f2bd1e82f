package com.sn;

import java.util.ArrayList;
import java.util.List;
import java.util.ListIterator;

import com.sn.entity.Employee;

public class EmployeeUtil {
	public static void printEmpDetails(Employee e) {
		System.out.print(e.getEmpId() + " ");
		System.out.print(e.getEmpName() + " ");
		System.out.print(e.getSalary() + " ");
		System.out.println();
	}
	
	public static List<Employee> updateSalary(List<Employee> empList, Integer addExtraAmount) {
		ListIterator<Employee> listItr = empList.listIterator();
		while(listItr.hasNext()) {
			Employee employee = listItr.next();
			employee.setSalary(employee.getSalary() + addExtraAmount);
		}
		return null;
	}
}
